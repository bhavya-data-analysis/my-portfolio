---
const { title, desc, metrics, tech, github, live } = Astro.props;
---

<div class="card" data-animate>
  <h3>{title}</h3>
  <p>{desc}</p>

  <div class="project-metrics">
    {metrics.map(m => <span>{m}</span>)}
  </div>

  <div class="project-tech" style="margin-top:12px">
    {tech.map(t => <span>{t}</span>)}
  </div>

  <div style="margin-top:20px">
    <a href={github} target="_blank">GitHub →</a>
    {live && <span> | <a href={live} target="_blank">Live →</a></span>}
  </div>
</div>
